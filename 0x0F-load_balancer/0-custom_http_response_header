#!/usr/bin/env bash
# 0-custom_http_response_header
# Written by Ignatius K <ignatiuskisekka@gmail.com>
#
# Script that;
# 	- adds custom header `X-Served-By`


NGINX_GLOBAL_CONFIG_FILE=/etc/nginx/nginx.conf

CONFIG_TO_ADD_HEADER_DIRECTIVE="\tadd_header X-Served-By \$hostname always;"
sed -i "16i\\$CONFIG_TO_ADD_HEADER_DIRECTIVE\n" $NGINX_GLOBAL_CONFIG_FILE

service nginx restart
